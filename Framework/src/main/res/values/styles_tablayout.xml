<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Meow.ViewPager" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Meow.TabLayout.Surface" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Meow.TabLayout.Primary" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Meow.TabLayout.Secondary" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?colorSecondary</item>
    </style>

    <style name="Meow.TabLayout.PrimarySurface" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>