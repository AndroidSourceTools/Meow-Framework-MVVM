<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
    </style>

    <style name="Meow.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/App.ShapeAppearance.Card</item>
    </style>

    <style name="Meow.CardView.Draggable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Meow.CardView.Checkable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="Meow.CardView.Outlined">
        <item name="strokeColor">@color/stroke_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Meow.CardView.Outlined.Draggable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Meow.CardView.Outlined.Checkable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:checkable">true</item>
    </style>

</resources>