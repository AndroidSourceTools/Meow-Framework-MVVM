<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Meow.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Meow.Checkbox.Primary">
        <item name="android:theme">@style/Meow.Theme.Checkbox.Primary</item>
    </style>

    <style name="Meow.Checkbox.Secondary">
        <item name="android:theme">@style/Meow.Theme.Checkbox.Secondary</item>
    </style>

    <style name="Meow.Checkbox.OnPrimary">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="buttonTint">?colorOnPrimary</item>
        <item name="android:theme">@style/Meow.Theme.Checkbox.OnPrimary</item>
    </style>

    <style name="Meow.Checkbox.OnSecondary">
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="buttonTint">?colorOnSecondary</item>
        <item name="android:theme">@style/Meow.Theme.Checkbox.OnSecondary</item>
    </style>

    <style name="Meow.Theme.Checkbox.Primary" parent="">
        <item name="colorControlActivated">?colorPrimary</item>
    </style>

    <style name="Meow.Theme.Checkbox.Secondary" parent="">
        <item name="colorControlActivated">?colorSecondary</item>
    </style>

    <style name="Meow.Theme.Checkbox.OnPrimary" parent="">
        <item name="colorControlActivated">?colorOnPrimary</item>
    </style>

    <style name="Meow.Theme.Checkbox.OnSecondary" parent="">
        <item name="colorControlActivated">?colorOnSecondary</item>
    </style>

</resources>