<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Meow.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Meow.Checkbox.Primary">
        <item name="buttonTint">@color/checkbox_primary</item>
    </style>

    <style name="Meow.Checkbox.Secondary">
        <item name="buttonTint">@color/checkbox_secondary</item>
    </style>

    <style name="Meow.Checkbox.OnPrimary">
        <item name="buttonTint">@color/checkbox_on_primary</item>
    </style>

    <style name="Meow.Checkbox.OnSecondary">
        <item name="buttonTint">@color/checkbox_on_secondary</item>
    </style>

</resources>