<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Meow.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Meow.RadioButton.Horizontal">
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="Meow.RadioButton.Vertical">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Meow.RadioButton.Horizontal.Primary">
        <item name="android:theme">@style/Meow.Theme.RadioButton.Primary</item>
    </style>

    <style name="Meow.RadioButton.Vertical.Primary">
        <item name="android:theme">@style/Meow.Theme.RadioButton.Primary</item>
    </style>

    <style name="Meow.RadioButton.Horizontal.Secondary">
        <item name="android:theme">@style/Meow.Theme.RadioButton.Secondary</item>
    </style>

    <style name="Meow.RadioButton.Vertical.Secondary">
        <item name="android:theme">@style/Meow.Theme.RadioButton.Secondary</item>
    </style>

    <style name="Meow.RadioButton.Horizontal.OnPrimary">
        <item name="buttonTint">?colorOnPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Meow.RadioButton.Vertical.OnPrimary">
        <item name="buttonTint">?colorOnPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Meow.RadioButton.Horizontal.OnSecondary">
        <item name="buttonTint">?colorOnSecondary</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="Meow.RadioButton.Vertical.OnSecondary">
        <item name="buttonTint">?colorOnSecondary</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="Meow.Theme.RadioButton.Primary" parent="">
        <item name="colorControlActivated">?colorPrimary</item>
    </style>

    <style name="Meow.Theme.RadioButton.Secondary" parent="">
        <item name="colorControlActivated">?colorSecondary</item>
    </style>

</resources>