<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="sample.ui.meowwidget.form.FormViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    isPersianNumber="@{true}"
                    prefixText="@{@string/prefix}"
                    suffixText="@{@string/suffix}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/hello_world"
                    android:textColor="@{@color/black}"
                    style="@style/textAppearance.Body2" />

                <meow.widget.MeowFormView
                    android:id="@+id/fv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:resetForm="true">

                    <meow.widget.MeowTextField
                        android:id="@+id/et"
                        style="@style/Meow.TextField.Form.Filled.Dense"
                        android:hint="@string/mobile"
                        app:counterEnabled="true"
                        app:counterMaxLength="10"
                        app:errorEnabled="true"
                        app:meow_inputType="phone"
                        app:meow_validateType="mobile"
                        app:startIconDrawable="@drawable/ic_call" />

                    <meow.widget.MeowTextField
                        android:id="@+id/et2"
                        style="@style/Meow.TextField.Form.Filled"
                        android:hint="@string/email"
                        app:errorEnabled="true"
                        app:meow_inputType="textEmailAddress"
                        app:startIconDrawable="@drawable/ic_android"
                        app:meow_validateType="email" />

                    <meow.widget.MeowTextField
                        android:id="@+id/et3"
                        style="@style/Meow.TextField.Form.Outlined"
                        android:hint="@string/name"
                        app:errorEnabled="true"
                        app:meow_inputType="text"
                        app:startIconDrawable="@drawable/ic_android"
                        app:meow_validateType="empty" />

                    <meow.widget.MeowTextField
                        android:id="@+id/et4"
                        style="@style/Meow.TextField.Form.Outlined.Dense"
                        android:hint="@string/address"
                        app:errorEnabled="true"
                        app:meow_inputType="textMultiLine"
                        app:startIconDrawable="@drawable/ic_call"
                        app:meow_validateType="optional" />

                    <meow.widget.MeowSpinner
                        android:id="@+id/sp1"
                        style="@style/Meow.Spinner.Form.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/submit" />

                </meow.widget.MeowFormView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>