<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="sample.ui.material.checkbox.CheckboxViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            style="@style/Meow.Checkbox"
            android:text="@string/checkbox_simple" />

        <com.google.android.material.checkbox.MaterialCheckBox
            style="@style/Meow.Checkbox"
            android:text="@string/checkbox_tint"
            app:buttonTint="@color/checkbox_primary" />

        <com.google.android.material.checkbox.MaterialCheckBox
            style="@style/Meow.Checkbox"
            android:text="@string/checkbox_tint"
            app:buttonTint="@color/checkbox_secondary" />

    </LinearLayout>

</layout>
