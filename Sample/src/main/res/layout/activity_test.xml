<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="sample.ui.test.TestViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv"
            suffixText='@{":1656"}'
            prefixText='@{"*"}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="متن نمونه"
            android:fontFamily="@font/iran_sans_bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <meow.widget.MeowFormView
            android:id="@+id/fv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:resetForm="true">

            <meow.widget.MeowTextField
                android:id="@+id/et"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:hint="Mobile Number"
                android:padding="0dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:counterEnabled="true"
                app:counterMaxLength="12"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/ic_error"
                app:isPersian="true"
                app:meow_validateType="email"
                app:startIconDrawable="@drawable/ic_call"
                app:startIconTint="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ثبت"
                app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent" />

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/primary"
                app:shapeAppearanceOverlay="@style/MyShape" />

        </meow.widget.MeowFormView>

        <ImageView
            aspectRatio='@{"1:1"}'
            aspectRatioEnable="true"
            data='@{"https://i.stack.imgur.com/EYzpL.jpg"}'
            placeHolder="@{@drawable/ic_android}"
            android:layout_width="86dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

    </LinearLayout>

</layout>