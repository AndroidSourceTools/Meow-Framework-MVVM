<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="sample.ui.test.TestViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            isPersianNumber="@{true}"
            prefixText="@{`8`}"
            suffixText="@{`:`}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans_bold"
            android:gravity="center"
            android:text="Hello World1"
            android:textColor="@{@color/black}" />

        <meow.widget.MeowFormView
            android:id="@+id/fv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:resetForm="true">

            <meow.widget.MeowTextField
                android:id="@+id/et"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:hint="Mobile Number"
                android:padding="0dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:counterEnabled="true"
                app:counterMaxLength="12"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/ic_error"
                app:errorTextAppearance="@style/textAppearance.Caption"
                app:inputType="phone"
                app:isPersianNumber="true"
                app:meow_fontFamily="@font/iransans_mobile_bold"
                app:startIconDrawable="@drawable/ic_call"
                app:startIconTint="@color/primary"
                app:validateType="email" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_regular"
                android:text="ثبت" />

            <!--            <View-->
            <!--                android:layout_width="100dp"-->
            <!--                android:layout_height="100dp"-->
            <!--                android:background="@color/primary"-->
            <!--                app:shapeAppearanceOverlay="@style/MyShape" />-->

        </meow.widget.MeowFormView>

        <ImageView
            aspectRatio="@{`16:9`}"
            aspectRatioEnable="@{true}"
            data="@{`https://i.stack.imgur.com/EYzpL.jpg`}"
            placeHolder="@{@drawable/ic_android}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:scaleType="centerCrop" />

    </LinearLayout>

</layout>